<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        tools:context=".ItemDetail">

        <TextView
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:text="Team Name"
            android:id="@+id/tv_teamName"
            android:fontFamily="@font/lemonadabold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img_ImageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:id="@+id/tv_listDescription"
            android:text="Description"
            android:fontFamily="@font/lemonadamedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_Bookmark"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Add As Favorite Team"
            android:layout_width="wrap_content"
            android:fontFamily="@font/lemonadasemibold"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</ScrollView>
